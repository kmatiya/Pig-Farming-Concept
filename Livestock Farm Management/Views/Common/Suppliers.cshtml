@model IEnumerable<Open_Chequelist_Template.Models.supplier>

@{
    ViewBag.Title = "Suppliers";
}
<div class="app-title">
    <h2>Suppliers</h2>

    <p>
        @Html.ActionLink("Create New", "AddSupplier")
    </p>
</div>
<div class="row">
    <div class="col-md-12" id="dataintable">
        <div class="tile">
            <div class="tile-body">
                <p class="text-danger"></p>
                <div class="table-responsive">
                    <table class="table table-hover table-bordered" id="sampleTable">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.supplierName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.supplierPhoneNumber)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.supplierEmail)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.fieldState.state)
                                </th>
                                <th>Options</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.supplierName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.supplierPhoneNumber)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.supplierEmail)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.fieldState.state)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "EditSupplier", new { id = item.supplierID }) |
                                        @Html.ActionLink("Details", "SupplierDetails", new { id = item.supplierID }) |
                                        @Html.ActionLink("Delete", "Delete", new { id = item.supplierID })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
             </div>
           </div>
        </div>
    </div>
<script src="~/Scripts/js/jquery-3.2.1.min.js"></script>
<script src="~/Scripts/js/plugins/jquery.dataTables.min.js"></script>
<script src="~/Scripts/js/plugins/dataTables.bootstrap.min.js"></script>
<script>$('#sampleTable').DataTable();</script>